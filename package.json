{
    "name": "reddit-wallpaper-changer",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "dev": "NODE_ENV=DEV vue-cli-service serve & sleep 5 && NODE_ENV=DEV electron index.js",
        "package": "npm run build; npm run package-osx; npm run package-win; npm run package-linux;",
        "package-osx": "electron-packager ./ --platform=darwin --arch=x64 --icon=src/assets/app.icns --out=package --overwrite",
        "package-win": "electron-packager ./ --platform=win32 --arch=ia32 --icon=src/assets/app.ico --out=package --asar --overwrite=force",
        "package-linux": "electron-packager ./ --platform=linux --arch=ia32 --icon=src/assets/app.ico --out=package --asar --overwrite=force"
    },
    "dependencies": {
        "fs": "^0.0.1-security",
        "image-downloader": "^3.4.2",
        "os": "^0.1.1",
        "path": "^0.12.7",
        "reddit.js": "^0.1.4",
        "vue": "^2.6.6",
        "vue-electron": "^1.0.6",
        "vue-router": "^3.0.1",
        "wallpaper": "^4.2.0"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^3.4.0",
        "@vue/cli-plugin-eslint": "^3.4.0",
        "@vue/cli-service": "^3.4.0",
        "@vue/eslint-config-prettier": "^4.0.1",
        "babel-eslint": "^10.0.1",
        "electron": "^4.0.7",
        "electron-packager": "^13.1.0",
        "eslint": "^5.8.0",
        "eslint-plugin-vue": "^5.0.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-prettier": "^3.0.1",
        "node-sass": "^4.9.0",
        "sass-loader": "^7.1.0",
        "vue-template-compiler": "^2.5.21"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "plugin:prettier/recommended",
            "eslint:recommended",
            "@vue/prettier"
        ],
        "rules": {
            "no-console": "off"
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
